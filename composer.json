{
    "require": {
        "php": "^8.4",
        "codeigniter4/framework": "^4.6",
        "components/font-awesome": "^6.5",
        "components/jquery": "^3.7",
        "twbs/bootstrap": "5.3.3",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "phpunit/phpunit": "^10.5.16",
        "mikey179/vfsstream": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit",
        "post-install-cmd": [
            "cp vendor/components/jquery/jquery.min.js public/assets/js/jquery.min.js",
            "cp vendor/components/font-awesome/css/all.css public/assets/css/all.css",
            "cp -R vendor/components/font-awesome/webfonts public/assets/webfonts",
            "cp -R vendor/twbs/bootstrap/dist public/assets/bootstrap"
        ]
    }
}
